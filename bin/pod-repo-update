#!/bin/sh

REPO="https://git.dev.tencent.com/ElfSundae/Specs.git"
MASTER_PATH="$HOME/.cocoapods/repos/master"

if ! [[ -d "$MASTER_PATH" ]]; then
    git clone "$REPO" "$MASTER_PATH"
fi

cd "$MASTER_PATH"
git remote set-url origin "$REPO"

pod repo list

pod repo update

cat <<EOT

================================
Remember to set master repo source in the Podfile of your project:

# source 'any/other/sources'
source '${REPO}'
...

================================
EOT
